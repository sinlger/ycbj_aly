---
import ImageComparison from "../React/ImageComparison";

// 产品效果展示数据
const SHOWCASE_ITEMS = [
  {
    title: "人体分割效果",
    desc: "发丝级精度处理，完美识别人物边缘，即使是飞扬的头发也能实现平滑抠图，适用于证件照及海报制作。",
    original:
      "https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?q=80&w=800&h=600&fit=crop",
    processed:
      "https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?q=80&w=800&h=600&fit=crop&blur=20", // 模拟效果
  },
  {
    title: "汽车分割效果",
    desc: "针对金属反光及玻璃透明度进行优化，精准分离车身与复杂背景，是汽车电商及广告设计的理想选择。",
    original:
      "https://images.unsplash.com/photo-1503376780353-7e6692767b70?q=80&w=800&h=600&fit=crop",
    processed:
      "https://images.unsplash.com/photo-1503376780353-7e6692767b70?q=80&w=800&h=600&fit=crop&sepia=1", // 模拟效果
  },
  {
    title: "宠物分割效果",
    desc: "攻克动物绒毛抠图难点，AI 自动识别细微毛发走向，保留猫狗宠物的灵动细节，不再有生硬边缘。",
    original:
      "https://images.unsplash.com/photo-1514888286974-6c03e2ca1dba?q=80&w=800&h=600&fit=crop",
    processed:
      "https://images.unsplash.com/photo-1514888286974-6c03e2ca1dba?q=80&w=800&h=600&fit=crop&grayscale=1", // 模拟效果
  },
  {
    title: "服饰分割效果",
    desc: "精确提取服装轮廓，保留面料质感与褶皱边缘。支持服装平铺及模特穿着图，助力时尚电商快速换底。",
    original:
      "https://images.unsplash.com/photo-1525507119028-ed4c629a60a3?q=80&w=800&h=600&fit=crop",
    processed:
      "https://images.unsplash.com/photo-1525507119028-ed4c629a60a3?q=80&w=800&h=600&fit=crop&invert=1", // 模拟效果
  },
];
---

<div class="py-20 bg-slate-50/50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex flex-col items-center mb-16 text-center">
      <span class="text-indigo-600 font-bold tracking-wider uppercase text-sm mb-2">Capabilities</span>
      <h2 class="text-3xl md:text-4xl font-black text-slate-900 tracking-tight mb-4">
        AI 视觉处理能力演示
      </h2>
      <p class="text-slate-500 max-w-2xl text-lg">
        针对不同场景优化的 AI 模型，为您提供最专业的分割效果
      </p>
      <div class="w-12 h-1 bg-indigo-600 rounded-full mt-6"></div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 md:gap-12">
      {
        SHOWCASE_ITEMS.map((item, index) => (
          <div
            class="bg-white rounded-[32px] overflow-hidden border border-slate-100 shadow-xl shadow-slate-200/40 hover:shadow-2xl hover:shadow-indigo-100/50 transition-all duration-300 group"
          >
            <div class="p-6 md:p-8 space-y-6">
              <div class="flex items-center space-x-4 mb-4">
                 <div class="w-10 h-10 rounded-full bg-indigo-50 flex items-center justify-center text-indigo-600 font-bold text-lg">
                    {index + 1}
                 </div>
                 <h3 class="text-xl font-black text-slate-900">{item.title}</h3>
              </div>
              
              <div class="rounded-2xl overflow-hidden shadow-inner border border-slate-100 bg-slate-50 relative">
                 <ImageComparison 
                    client:visible 
                    leftImage={item.original} 
                    rightImage={item.processed}
                    className="!max-w-full !rounded-none !shadow-none"
                 />
                 <div class="absolute top-3 left-3 bg-black/50 backdrop-blur-sm text-white text-[10px] px-2 py-1 rounded font-medium pointer-events-none">原图</div>
                 <div class="absolute top-3 right-3 bg-indigo-600/80 backdrop-blur-sm text-white text-[10px] px-2 py-1 rounded font-medium pointer-events-none">处理后</div>
              </div>

              <p class="text-slate-600 leading-relaxed font-medium">
                {item.desc}
              </p>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</div>

