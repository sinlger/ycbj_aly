---
import '@fontsource/roboto';
import BaseHead from "../components/BaseHead.astro";
import Navigation from "../components/global/Navigation.astro";
import Footer from "../components/global/Footer.astro";
import FreeTipToast from '../components/React/FreeTipToast';
---

<html
  lang="en"
  class="scroll-smooth selection:bg-accent-500 selection:text-white no-touchevents hydrated">
  <head>
    <BaseHead />
  </head>
  <body class="bg-white flex flex-col min-h-svh">
    <Navigation />
    <main class="grow"><slot /></main>
    <Footer />
    <FreeTipToast client:load />
  </body>
</html>
